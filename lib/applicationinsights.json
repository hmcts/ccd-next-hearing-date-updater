{
  "connectionString": "${file:/mnt/secrets/ccd/app-insights-connection-string}",
  "role": {
    "name": "ccd-next-hearing-date-updater"
  },
  "preview": {
    "sampling": {
      "_comment": "Reduce noise from health check requests by sampling at 1%",
      "overrides": [
        {
          "telemetryType": "request",
          "attributes": [
            {
              "key": "http.url",
              "value": "https?://[^/]+/health.*",
              "matchType": "regexp"
            }
          ],
          "percentage": 1
        }
      ]
    }
  }
}
